include ../partials/header

div.container
  div.row
    h1(style="text-align: center") Add a New Comment to #{campground.name}
    
    div.form
      form(action="/campgrounds/<%= campground._id %>/comments" method="POST") 
        div.form-group
          input(class="form-control", type="text", name="comment[text]", placeholder="text") 
        div.form-group
          input(class="form-control", type="text", name="comment[author]", placeholder="author")
        div.form-group
          button.btn.btn-primary.btn-block.btn-large(type="submit") Submit 
 
      a(href="/campgrounds") Go Back 

include ../partials/footer
